.page{
  width:100%;
  height:100%;
  background: #eee;
  position: relative;
}
.page .wc{
  padding:15rpx 30rpx;
  background: #ddd;
}
.page-top{
  width:100%;
  height:100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #397DE6;
  transition:left 1s;
}
.page-top button{
  width:200rpx;
  margin: 0 0;
  border-radius:0;
  border:0;
}
.c-state1{
  /* transform: rotate(0deg) scale(1) translate(75%,0%);  */
  /* -webkit-transform: rotate(0deg) scale(1) translate(75%,0%);  */
  left:75%;
}