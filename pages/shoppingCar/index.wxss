/* index.wxss */
@import "../shopcart/shopcart.wxss";
view , scroll-view{
  padding: 0px;
  margin: 0px;
}
.weui-navbar{
   width: 100%;
   position: fixed;
   border-bottom: 1px solid #00bba1;
   box-sizing: border-box;
   white-space: nowrap; 
   z-index: 100;
   background: white;
}
.rec{
  width: 100%;
  padding:47px 0 0;
}
.weui-navbar .default-item{
  display: inline-block;
  text-align: center;
  font-size: 32rpx;
  box-sizing: border-box;
  height:47px;
  line-height: 47px;
}
.weui-navbar .item_on{
   color: #00bba1;
}
.weui-navbar-slider{
    width: 160rpx;
    height: 2px;
    content:"";
    background: #00bba1;
    margin-left: 12.5rpx;
    transition: transform .5s;
}
.swiper-box{
  height:240px;
  border-bottom: 1px solid #d1d1d1;
}
.swiper-box .swiper-item{
   text-align: center;
   height: 100%;
}
.swiper-box .swiper-item image{
  width: 100%;
  height:1005;
}
.loadText{
  display:block;
  font-weight: bold;
  padding:10rpx 0;
  border-bottom:1px solid #999;
}

/* 购物车的样式 */
#shopCarChild .cart_container {
  display: flex;
  flex-direction: row;
}
#shopCarChild {
  margin-bottom: 120rpx;
}
.column {
  display: flex;
  flex-direction: column;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.sku {
  margin-top: 60rpx;
  margin-left: 100rpx;
}
.sku-price {
  color: red;
  position: relative;
  margin-top: 70rpx;
}
.price {
  color: red;
  position: relative;
}
.title {
  font-size: 38rpx;
  margin-top: 40rpx;
}
.small_text {
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 10rpx;
}
.item-select {
  font-size:50rpx;
  margin-top: 90rpx;
  margin-left: 20rpx;
}
.item-allselect {
  font-size:50rpx;
  margin-left: 20rpx;
}
.item-selected{
  color:#0f0;
}
.item-image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
}
.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;
}
.button-red {
  background-color: #f44336; /* 红色 */
}
button {
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 120rpx;
  line-height: 120rpx;
}