/* components/shopcart/index.wxss */

/*主容器*/  .stepper {  
  width:90px;  
  height: 26px;  
  /*给主容器设一个边框*/  
  border: 1rpx solid #666;  
  border-radius: 3px;  
  margin:0 auto;
  display:flex;
}  
/*加号和减号*/  .stepper text {  
  width: 24px;  
  line-height: 26px;  
  text-align: center;
}  
/*数值*/  .stepper input {  
  width: 40px;  
  height: 26px;  
  margin: 0 auto;   
  text-align: center;  
  font-size: 12px;  
  color: #666;    /*给中间的input设置左右边框即可*/  
  border-left: 1rpx solid #666;  
  border-right: 1rpx solid #666;
}  
/*普通样式*/  .stepper .normal{  
  color: black;  
}  
/*禁用样式*/  .stepper .disabled{  
  color: #ccc;  
} 